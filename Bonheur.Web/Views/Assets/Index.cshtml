@model IEnumerable<Bonheur.Web.Models.Asset>

@{
    ViewBag.Title = "Index";
    Decimal total = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    total = total + item.Amount;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @item.Amount.ToString("N")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createdDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AssetID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AssetID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AssetID })
        </td>
    </tr>
}
    <tfoot>
        <tr>
            <td>Total</td>
            <td>@total.ToString("N")</td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>

</table>
